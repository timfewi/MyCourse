@model MyCourse.Web.Models.ContactRequestModels.ContactRequestViewModel

<h2 class="mb-4 text-center">Kontaktieren Sie uns</h2>

<form asp-action="Index" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Name" class="form-label">
            <i class="fas fa-user me-2"></i> @Html.DisplayNameFor(model => model.Name)
        </label>
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-user"></i></span>
            <input asp-for="Name" class="form-control" placeholder="Ihr Name" required />
            <div class="invalid-feedback">
                Bitte geben Sie Ihren Namen ein.
            </div>
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">
            <i class="fas fa-envelope me-2"></i> @Html.DisplayNameFor(model => model.Email)
        </label>
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            <input asp-for="Email" class="form-control" placeholder="Ihre E-Mail-Adresse" required />
            <div class="invalid-feedback">
                Bitte geben Sie eine gültige E-Mail-Adresse ein.
            </div>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Subject" class="form-label">
            <i class="fas fa-heading me-2"></i> @Html.DisplayNameFor(model => model.Subject)
        </label>
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-heading"></i></span>
            <input asp-for="Subject" class="form-control" placeholder="Betreff" required />
            <div class="invalid-feedback">
                Bitte geben Sie einen Betreff ein.
            </div>
        </div>
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Message" class="form-label">
            <i class="fas fa-comment-dots me-2"></i> @Html.DisplayNameFor(model => model.Message)
        </label>
        <div class="input-group">
            <textarea asp-for="Message" class="form-control tinymce" rows="5" placeholder="Ihre Nachricht" required></textarea>
            <div class="invalid-feedback">
                Bitte geben Sie eine Nachricht ein.
            </div>
        </div>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-paper-plane me-2"></i> Nachricht senden
        </button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
