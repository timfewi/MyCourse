<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyCourse.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-iconpicker/css/fontawesome-iconpicker.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyCourse.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark text-white bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyCourse.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Startseite</a>
                        </li>
                     
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.IsInRole("ADMIN"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Dashboard</a>
                            </li>
                        }
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light text-muted pt-5 pb-4">
        <div class="container-fluid text-md-left">
            <div class="row text-md-left">
                <!-- Über uns -->
                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 font-weight-bold">MyCourse.Web</h5>
                    <p>
                        MyCourse.Web bietet hochwertige Malkurse für Anfänger und Fortgeschrittene. Entfalte deine Kreativität mit unseren erfahrenen Lehrern.
                    </p>
                </div>

                <!-- Schnellzugriff -->
                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 font-weight-bold">Schnellzugriff</h5>
                    <p><a href="@Url.Action("Index", "Home")" class="text-reset">Startseite</a></p>
                    <p><a href="@Url.Action("Index", "Contact")" class="text-reset">Kontakt</a></p>
                </div>

                <!-- Rechtliches -->
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 font-weight-bold">Rechtliches</h5>
                    <p><a href="@Url.Action("Privacy", "Home")" class="text-reset">Datenschutz</a></p>
                    <p><a href="@Url.Action("Terms", "Home")" class="text-reset">Nutzungsbedingungen</a></p>
                    <p><a href="@Url.Action("FAQ", "Home")" class="text-reset">FAQ</a></p>
                </div>

                <!-- Kontakt -->
                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 font-weight-bold">Kontakt</h5>
                    <p><i class="fas fa-home me-3"></i> Musterstraße 123, 12345 Musterstadt</p>
                    <p><i class="fas fa-envelope me-3"></i> info@mycourse.web</p>
                    <p><i class="fas fa-phone me-3"></i> +49 123 456789</p>
                    <p><i class="fas fa-print me-3"></i> +49 123 456780</p>
                </div>
            </div>

            <hr class="mb-4">

            <div class="row align-items-center">
                <!-- Soziale Medien -->
                <div class="col-md-7 col-lg-8">
                    <p>© 2024 MyCourse.Web. Alle Rechte vorbehalten.</p>
                </div>

                <!-- Newsletter -->
                <div class="col-md-5 col-lg-4">
                    <form>
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="E-Mail-Adresse" aria-label="E-Mail-Adresse" aria-describedby="button-addon2">
                            <button class="btn btn-primary" type="submit" id="button-addon2">Abonnieren</button>
                        </div>
                    </form>
                    <div class="mt-3">
                        <a href="#" class="me-4 text-reset"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="me-4 text-reset"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="me-4 text-reset"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="me-4 text-reset"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    <script src="~/lib/fontawesome-iconpicker/js/fontawesome-iconpicker.min.js"></script>
    <script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
