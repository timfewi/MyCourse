@model MyCourse.Web.Models.CourseModels.CourseRegistrationViewModel

<form id="registration-form" method="post" action="@Url.Action("RegisterPartial", "Course")">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CourseId" />

    <div class="modal-header">
        <h5 class="modal-title" id="registerModalLabel">
            <i class="fas fa-user-plus me-2"></i>Für Kurs anmelden
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
    </div>
    <div class="modal-body">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label">
                    <i class="fas fa-user text-primary me-2"></i>@Html.DisplayNameFor(m => m.FirstName)
                </label>
                <input asp-for="FirstName" class="form-control" placeholder="Vorname" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="LastName" class="form-label">
                    <i class="fas fa-user text-primary me-2"></i>@Html.DisplayNameFor(m => m.LastName)
                </label>
                <input asp-for="LastName" class="form-control" placeholder="Nachname" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="Email" class="form-label">
                    <i class="fas fa-envelope text-primary me-2"></i>@Html.DisplayNameFor(m => m.Email)
                </label>
                <input asp-for="Email" class="form-control" placeholder="E-Mail-Adresse" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="PhoneNumber" class="form-label">
                    <i class="fas fa-phone text-primary me-2"></i>@Html.DisplayNameFor(m => m.PhoneNumber)
                </label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Telefonnummer" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Weitere Felder nach Bedarf hinzufügen -->
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times me-2"></i>Abbrechen
        </button>
        <button type="submit" class="btn btn-success">
            <i class="fas fa-check-circle me-2"></i>Anmelden
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
